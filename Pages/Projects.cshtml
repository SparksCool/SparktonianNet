@page
@model SparktonianNet.Pages.ProjectsModel
@{
    ViewData["Title"] = "Projects";
}
<div class="text-center">
    <h1 class="display-4">Projects List</h1>
</div>

<div class="container projectContainer" style="margin: auto; overflow-x: hidden; overflow-y: auto;">
    @Html.Raw(Model.GetProjectsHTML())
</div>


<style>
    @@media (max-width: 700px) {
        .projectContainer {
            width: 90%;
            margin: auto;
            overflow-x: hidden;
            overflow-y: auto;
        }
    }

    @@media (min-width: 700px) {
        .projectContainer {
            width: 50%;
            margin: auto;
            overflow-x: hidden;
            overflow-y: auto;
        }
    }

    .projectEntry {
        overflow: hidden;
        margin: 10px;
        display: block;
        backdrop-filter: blur(10px);
        border-radius: 10px;
        text-align: left;
        background-color: rgba(0, 0, 0, 0.1);

    }

    .projectTitle {
        vertical-align: top;
        margin: 10px;
    }

    .projectDesc {
        vertical-align: middle;
        margin: 10px;
    }

    .projectTags {
        list-style-type: none;
        margin: 10px;
        padding: 0;
        align-self: flex-end;
    }

    .projectTag {
        margin: 3px;
        margin-bottom:10px;
        padding: 3px;
        padding-top: 1px;
        padding-bottom: 2px;
        border: 5px;
        background-color: rgba(0, 255, 255, 0.4);
        border-radius: 5px;
        display: inline-block;
        float: left;
        user-select: none;
    }

    .projectTag:hover {
        background-color: rgba(0, 255, 255, 0.7);
        transition: 0.3s;
    }

    .projectSource {
        margin: 3px;
        margin-right: 10px;
        padding: 3px;
        padding-top: 1px;
        padding-bottom: 2px;
        border: 5px;
        background-color: rgba(255, 255, 255, 1);
        border-radius: 5px;
        display: inline-block;
        float: right;
    }

    .projectSource:hover {
        background-color: rgba(255, 255, 255, 0.7);
        transition: 0.3s;
    }

    .projectDemo {
        margin: 3px;
        padding: 3px;
        padding-top: 1px;
        padding-bottom: 2px;
        border: 5px;
        background-color: rgba(255, 255, 255, 1);
        border-radius: 5px;
        display: inline-block;
        float: right;
    }

    .projectDemo:hover {
        background-color: rgba(255, 255, 255, 0.7);
        transition: 0.3s;
    }

</style>