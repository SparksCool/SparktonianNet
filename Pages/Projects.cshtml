@page
@model SparktonianNet.Pages.ProjectsModel
@{
    ViewData["Title"] = "Projects";
}
<div class="text-center">
    <h1 class="display-4">Projects List</h1>
</div>

<div class="container overflow-scroll" style="width: 50%; margin: auto;">
    @Html.Raw(Model.GetProjectsHTML())
</div>


<style>
    .projectEntry {
        overflow: hidden;
        margin: 10px;
        display: block;
        backdrop-filter: blur(10px);
        text-align: left;

    }

    .projectEntry:hover {
        background-color: rgba(0, 0, 0, 0.5);
        transition: background-color 0.5s;
    }

    .projectTitle {
        vertical-align: top;
    }

    .projectDesc {
        vertical-align: middle;
    }

    .projectTags {
        list-style-type: none;
        margin: 0;
        padding: 0;
        align-self: flex-end;
    }

    .projectTag {
        margin: 3px;
        padding: 3px;
        padding-top: 1px;
        padding-bottom: 2px;
        border: 5px solid #00ffff;
        background-color: #00ffff;
        border-radius: 5px;
        display: inline-block;
        float: left;
    }

</style>