@page
@model SparktonianNet.Pages.SuggestModel
@{
    ViewData["Title"] = "Suggest a Feature";
}


<div class="text-center">
    <h1 class="display-4">Suggest a Feature</h1>
</div>

<form method="get" action="SuggestionConfirmation">
    <div class="form-group">
        <label for="feature">Feature</label>
        <input type="text" class="form-control" id="feature" name="feature" placeholder="Enter feature" minlength="5">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter description" minlength="40"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
